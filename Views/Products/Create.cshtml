@model ProductDto
@{
    ViewData["Title"] = "New Major";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 2rem 1rem;
        }

        .container {
            max-width: 700px;
            margin: 0 auto;
            animation: fadeIn 1s ease forwards;
        }

        .form-wrapper {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            padding: 2.5rem 2rem;
            animation: slideUp 1s ease forwards;
        }

        h2 {
            font-weight: 700;
            color: #343a40;
            margin-bottom: 2.5rem;
            text-align: center;
            animation: fadeInDown 1s ease forwards;
        }

        label {
            font-weight: 600;
            color: #495057;
        }

        .text-danger {
            font-size: 0.875rem;
        }

        .btn-primary {
            background-color: #08618d;
            border-color: #08618d;
            transition: background-color 0.3s, border-color 0.3s;
        }

            .btn-primary:hover,
            .btn-primary:focus {
                background-color: #064d6a;
                border-color: #064d6a;
            }

        .btn-outline-primary {
            color: #08618d;
            border-color: #08618d;
            transition: background-color 0.3s, color 0.3s;
        }

            .btn-outline-primary:hover,
            .btn-outline-primary:focus {
                background-color: #08618d;
                color: #fff;
            }

        /* Animations */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        @@keyframes fadeInDown {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-wrapper">
            <h2>@ViewData["Title"]</h2>

            <form method="post" enctype="multipart/form-data" novalidate>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label" for="Name">Name Of Major</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Name" id="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label" for="Brand">Field of Major</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Brand" id="Brand" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label" for="Category">College Name</label>
                    <div class="col-sm-8">
                        <select class="form-select" asp-for="Category" id="Category">
                            <option value="Other">Other</option>
                            <option value="IT">IT</option>
                            <option value="Faculty of Medicine">Faculty of Medicine</option>
                            <option value="Faculty of Economics">Faculty of Economics</option>
                            <option value="College of Sharia">College of Sharia</option>
                            <option value="Faculty of Arts">Faculty of Arts</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label" for="Price">Major Hours</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Price" id="Price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label" for="Description">Description</label>
                    <div class="col-sm-8">
                        <textarea class="form-control" asp-for="Description" id="Description" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label" for="ImageFile">Image</label>
                    <div class="col-sm-8">
                        <input type="file" class="form-control" asp-for="ImageFile" id="ImageFile" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="Treeimage">Tree image</label>
                    <div class="col-sm-8">
                        <input type="file" class="form-control" asp-for="Treeimage" id="Treeimage" />
                        <span asp-validation-for="Treeimage" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="offset-sm-4 col-sm-4 d-grid">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    <div class="col-sm-4 d-grid">
                        <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index" role="button">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
