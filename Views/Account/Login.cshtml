@model LoginDto
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Darris</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #dbe9fb, #f0f4f8);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem 1rem;
            overflow-x: hidden;
        }

        .page-wrapper {
            background: white;
            border-radius: 16px;
            box-shadow: 0 15px 40px rgba(8, 97, 141, 0.15);
            width: 100%;
            max-width: 420px;
            padding: 2.5rem 2rem 3rem;
            animation: fadeInUp 0.8s ease forwards;
            position: relative;
            overflow: hidden;
        }

        /* Logo container */
        .logo-wrapper {
            display: flex;
            justify-content: center;
            margin-bottom: 1.5rem;
            animation: fadeInDown 1s ease forwards;
        }

            .logo-wrapper img {
                max-height: 80px;
                width: auto;
                filter: drop-shadow(0 0 3px rgba(8,97,141,0.3));
            }

        h2 {
            font-weight: 700;
            color: #08618d;
            margin-bottom: 0.5rem;
            text-align: center;
            animation: fadeInDown 1s ease forwards;
        }

        .tagline {
            text-align: center;
            color: #495057;
            font-size: 1rem;
            margin-bottom: 2rem;
            font-style: italic;
            animation: fadeIn 1.2s ease forwards;
        }

        label.form-label {
            font-weight: 600;
            color: #495057;
        }

        .form-control {
            border-radius: 8px;
            box-shadow: none;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

            .form-control:focus {
                border-color: #08618d;
                box-shadow: 0 0 8px rgba(8, 97, 141, 0.25);
            }

        .btn-primary {
            background-color: #08618d;
            border-color: #08618d;
            font-weight: 600;
            padding: 0.5rem 0;
            transition: background-color 0.3s, border-color 0.3s;
        }

            .btn-primary:hover,
            .btn-primary:focus {
                background-color: #064d6a;
                border-color: #064d6a;
            }

        .btn-outline-primary {
            border-color: #08618d;
            color: #08618d;
            font-weight: 600;
            transition: background-color 0.3s, color 0.3s;
        }

            .btn-outline-primary:hover,
            .btn-outline-primary:focus {
                background-color: #08618d;
                color: #fff;
            }

        .form-check-label {
            user-select: none;
        }

        .text-danger {
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: block;
        }

        .alert {
            animation: fadeIn 1.5s ease forwards;
        }

        /* Animations */
        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(25px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes fadeInDown {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <div class="logo-wrapper">
            <img src="/images/darris-removebg-preview.png" alt="Darris Logo" />
        </div>

        <h2>Please Log In</h2>
        <p class="tagline">Empowering your academic journey with ease and clarity.</p>
        <hr />

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@ViewBag.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" novalidate>
            <div class="mb-3">
                <label class="form-label" for="Email">Email</label>
                <input asp-for="Email" class="form-control" id="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="RememberMe" />
                <label class="form-check-label" for="RememberMe">Remember Me</label>
            </div>

            <div class="row mb-3 g-2">
                <div class="col-6 d-grid">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="col-6 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>

            <div class="text-center">
                <a class="btn btn-link" asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
