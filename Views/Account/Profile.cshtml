@model ProfileDto
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = null;
    ViewData["Title"] = "Profile";

    string GetUserRole()
    {
        if (User.IsInRole("admin")) return "Admin";
        if (User.IsInRole("seller")) return "Seller";
        if (User.IsInRole("client")) return "Client";
        return "";
    }
}

@{
    var appUser = await UserManager.GetUserAsync(User);
    var userRole = GetUserRole();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Darris</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #dbe9fb, #f0f4f8);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 3rem 1rem 4rem;
            overflow-x: hidden;
        }

        .page-wrapper {
            background-color: #fff;
            padding: 2.5rem 2rem 3rem;
            border-radius: 16px;
            box-shadow: 0 15px 40px rgba(8, 97, 141, 0.15);
            border: 1px solid #dee2e6;
            max-width: 720px;
            width: 100%;
            animation: fadeInUp 0.8s ease forwards;
            position: relative;
        }

        .logo-wrapper {
            display: flex;
            justify-content: center;
            margin-bottom: 1.5rem;
            animation: fadeInDown 1s ease forwards;
        }

            .logo-wrapper img {
                max-height: 80px;
                width: auto;
                filter: drop-shadow(0 0 3px rgba(8,97,141,0.3));
            }

        h2 {
            color: #08618d;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-align: center;
            animation: fadeInDown 1s ease forwards;
        }

        .subtitle {
            text-align: center;
            color: #495057;
            font-style: italic;
            margin-bottom: 2rem;
            animation: fadeIn 1.2s ease forwards;
            font-size: 1rem;
        }

        hr {
            border-color: #dee2e6;
            margin: 1rem 0 1.5rem;
        }

        .row.mb-2 > .col-sm-4 {
            font-weight: 600;
            color: #34495e;
        }

        .row.mb-2 > .col-sm-8 {
            color: #555;
        }

        .alert {
            animation: fadeIn 1.5s ease forwards;
        }

        /* Buttons container mimics login button layout */
        .btn-group-custom {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
            max-width: 360px;
            margin: 0 auto;
        }

        .btn-primary, .btn-warning {
            font-weight: 600;
            padding: 0.5rem 0;
            transition: background-color 0.3s, border-color 0.3s;
            width: 100%;
        }

        .btn-primary {
            background-color: #08618d;
            border-color: #08618d;
            color: white;
        }

            .btn-primary:hover,
            .btn-primary:focus {
                background-color: #064d6a;
                border-color: #064d6a;
                color: white;
            }

        .btn-warning {
            background-color: #f0ad4e;
            border-color: #eea236;
            color: #fff;
        }

            .btn-warning:hover,
            .btn-warning:focus {
                background-color: #ec971f;
                border-color: #d58512;
                color: #fff;
            }

        /* Modal styling */
        .modal-header {
            background-color: #08618d;
            color: white;
        }

        .form-control {
            border-radius: 8px;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

            .form-control:focus {
                border-color: #08618d;
                box-shadow: 0 0 8px rgba(8, 97, 141, 0.25);
            }

        /* Animations */
        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
        @@keyframes fadeInDown {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <div class="logo-wrapper">
            <img src="/images/darris-removebg-preview.png" alt="Darris Logo" />
        </div>

        <h2>Profile</h2>
        <p class="subtitle">Manage your personal information and account settings.</p>
        <hr />

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@ViewBag.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@ViewBag.SuccessMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row mb-2">
            <div class="col-sm-4">First Name</div>
            <div class="col-sm-8">@appUser?.FirstName</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4">Last Name</div>
            <div class="col-sm-8">@appUser?.LastName</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4">Email</div>
            <div class="col-sm-8">@appUser?.Email</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4">Phone</div>
            <div class="col-sm-8">@appUser?.PhoneNumber</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4">Address</div>
            <div class="col-sm-8">@appUser?.Address</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4">Role</div>
            <div class="col-sm-8">@userRole</div>
        </div>

        <div class="row mb-4">
            <div class="col-sm-4">Created At</div>
            <div class="col-sm-8">@appUser?.CreatedAt.ToString("yyyy-MM-dd")</div>
        </div>

        <hr />

        <div class="btn-group-custom">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#EditProfileModal">
                Edit Profile
            </button>

            <a class="btn btn-warning" asp-controller="Account" asp-action="ResetPassword">Reset Password</a>
        </div>
    </div>

    <!-- Edit Profile Modal -->
    <div class="modal fade" id="EditProfileModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row mb-2">
                            <label for="FirstName" class="col-sm-4 col-form-label">First Name</label>
                            <div class="col-sm-8">
                                <input id="FirstName" name="FirstName" class="form-control" asp-for="FirstName" autocomplete="off" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <label for="LastName" class="col-sm-4 col-form-label">Last Name</label>
                            <div class="col-sm-8">
                                <input id="LastName" name="LastName" class="form-control" asp-for="LastName" autocomplete="off" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <label for="Email" class="col-sm-4 col-form-label">Email</label>
                            <div class="col-sm-8">
                                <input id="Email" name="Email" class="form-control" asp-for="Email" autocomplete="off" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <label for="PhoneNumber" class="col-sm-4 col-form-label">Phone</label>
                            <div class="col-sm-8">
                                <input id="PhoneNumber" name="PhoneNumber" class="form-control" asp-for="PhoneNumber" autocomplete="off" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <label for="Address" class="col-sm-4 col-form-label">Address</label>
                            <div class="col-sm-8">
                                <input id="Address" name="Address" class="form-control" asp-for="Address" autocomplete="off" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="offset-sm-4 col-sm-8">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
