@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Darris</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f0f4f8;
            font-family: 'Segoe UI', sans-serif;
        }

        .page-wrapper {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 60px 15px;
            background: linear-gradient(145deg, #e3edf7, #f0f4f8);
        }

        .form-card {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
            border: 1px solid #dee2e6;
            width: 100%;
            max-width: 420px;
            animation: fadeInUp 0.8s ease-in-out;
        }

        .btn-primary {
            background-color: #08618d;
            border-color: #08618d;
        }

        .btn-outline-primary {
            border-color: #08618d;
            color: #08618d;
        }

        .btn-outline-primary:hover {
            background-color: #08618d;
            color: #fff;
        }

        .form-label {
            font-weight: 500;
        }

        .form-control {
            border-radius: 8px;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <div class="form-card">
            <h2 class="text-center mb-3">Forgot Password</h2>
            <hr />

            @if (ViewBag.SuccessMessage != null)
            {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@ViewBag.SuccessMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            }

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control" name="email" value="@ViewBag.Email" />
                    <span class="text-danger">@ViewBag.EmailError</span>
                </div>

                <div class="row mb-3">
                    <div class="col d-grid">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    <div class="col d-grid">
                        <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login" role="button">
                            Login
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
