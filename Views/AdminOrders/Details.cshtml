@{
    var successMessage = (string)ViewBag.SuccessMessage;
    var deliveryAddress = (string)ViewBag.DeliveryAddress;
    var paymentMethod = (string)ViewBag.PaymentMethod;
    var total = (decimal)ViewBag.Total;
    var cartSize = (int)ViewBag.CartSize;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Order Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container py-4">
        <div class="mx-auto rounded border p-4" style="max-width: 420px;">
            <h2 class="text-center mb-4">Order Details</h2>
            <hr />

            @if (!string.IsNullOrEmpty(successMessage))
            {
            <div class="alert alert-success mb-4" role="alert">@successMessage</div>
            <a class="btn btn-outline-primary d-block mx-auto" style="width: 120px;" asp-controller="ClientOrders" asp-action="Index">Back</a>
            }
            else
            {
            <div class="row mb-3">
                <div class="col-5 fw-semibold">Delivery Address</div>
                <div class="col-7 text-break">@deliveryAddress</div>
            </div>
            <div class="row mb-3">
                <div class="col-5 fw-semibold">Payment Method</div>
                <div class="col-7">@paymentMethod</div>
            </div>
            <div class="row mb-3">
                <div class="col-5 fw-semibold">Total Amount</div>
                <div class="col-7 fw-semibold">@total.ToString("F2")$</div>
            </div>
            <div class="row mb-4">
                <div class="col-5 fw-semibold">Quantity</div>
                <div class="col-7">@cartSize</div>
            </div>

            <form method="post">
                <div class="row g-2">
                    <div class="col-sm-6 d-grid">
                        <button type="submit" class="btn btn-primary">Confirm</button>
                    </div>
                    <div class="col-sm-6 d-grid">
                        <a class="btn btn-outline-primary" asp-controller="Cart" asp-action="Index">Back</a>
                    </div>
                </div>
            </form>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
