@model List<Product>
@{
    ViewData["Title"] = "Home Page";
    ViewData["HomePage"] = true;
}

<!-- Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    /* Base */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #212529;
    }

    /* Hero Section */
    .hero-section {
        background-color: #08618d;
        color: white;
        padding: 5rem 0;
        animation: fadeInDown 1s ease forwards;
        overflow: hidden;
    }

        .hero-section h1 {
            font-weight: 900;
            font-size: 3.5rem;
            animation: fadeInDown 1s ease forwards;
            opacity: 0;
            animation-delay: 0.2s;
        }

        .hero-section p.lead {
            font-size: 1.25rem;
            max-width: 520px;
            margin-top: 1rem;
            animation: fadeInDown 1s ease forwards;
            opacity: 0;
            animation-delay: 0.5s;
        }

    .hero-image {
        max-width: 310px;
        animation: fadeInScale 1s ease forwards;
        opacity: 0;
        animation-delay: 0.8s;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }

    /* Section Title */
    .section-title {
        font-weight: 700;
        color: #343a40;
        margin-bottom: 2.5rem;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        animation: fadeInUp 1s ease forwards;
        opacity: 0;
    }

    /* Product Cards */
    .product-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        animation: slideUp 1s ease forwards;
        opacity: 0;
        padding: 1.8rem 1.2rem;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .product-card:hover {
            transform: translateY(-8px) scale(1.03);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
            cursor: pointer;
        }

        .product-card img {
            height: 180px;
            object-fit: contain;
            margin-bottom: 1.2rem;
            border-radius: 12px;
            transition: transform 0.3s ease;
        }

            .product-card img:hover {
                transform: scale(1.05);
            }

        .product-card h5 {
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: #0b3d66;
        }

        .product-card p {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 0.4rem;
        }

        .product-card .text-primary {
            font-weight: 700;
            font-size: 1.1rem;
            margin-top: 1rem;
        }

    /* Buttons */
    .btn-primary {
        background-color: #08618d;
        border-color: #08618d;
        border-radius: 8px;
        font-weight: 600;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-primary:hover,
        .btn-primary:focus {
            background-color: #064a6e;
            border-color: #064a6e;
            box-shadow: 0 5px 15px rgba(8, 97, 141, 0.6);
        }

    .btn-outline-primary {
        border-radius: 8px;
        font-weight: 600;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-outline-primary:hover,
        .btn-outline-primary:focus {
            background-color: #08618d;
            color: white !important;
            border-color: #08618d;
            box-shadow: 0 5px 15px rgba(8, 97, 141, 0.5);
        }

    /* Space between buttons */
    .d-grid.gap-2 > a {
        margin-bottom: 0.4rem;
    }

    /* Animations */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    @@keyframes fadeInDown {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes fadeInScale {
        from

    {
        opacity: 0;
        transform: scale(0.9);
    }

    to {
        opacity: 1;
        transform: scale(1);
    }

    }

    @@keyframes slideUp {
        from

    {
        transform: translateY(40px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }
</style>

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-md-6">
                <h1 class="display-2 fw-bold mb-4">Darris</h1>
                <p class="lead">
                    A reference for Hashemite students to know everything important about their major, manage their university life,
                    and stay updated with insights from specialized committees in each major.
                </p>
            </div>
            <div class="col-md-6 text-center">
                <img src="~/images/darris-removebg-preview.png" class="img-fluid hero-image" alt="Darris Logo" />
            </div>
        </div>
    </div>
</div>

<!-- Majors Section -->
<div class="bg-light py-5">
    <div class="container">
        <h2 class="text-center section-title">Majors</h2>
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="product-card text-center h-100">
                        <img src="/products/@product.ImageFileName" class="img-fluid mb-3" alt="@product.Name" />
                        <h5>@product.Name</h5>
                        <p class="mb-1 text-muted"><strong>Type:</strong> @product.Brand</p>
                        <p class="mb-1 text-muted"><strong>College:</strong> @product.Category</p>
                        <h5 class="text-primary mt-3">@product.Price Hours</h5>
                        <div class="d-grid gap-2 mt-3">
                            <a class="btn btn-primary btn-sm" asp-controller="Store" asp-action="Details" asp-route-id="@product.Id">Subjects</a>
                            <a class="btn btn-outline-primary btn-sm" asp-controller="Store" asp-action="Tree" asp-route-id="@product.Id">Tree Plan</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
